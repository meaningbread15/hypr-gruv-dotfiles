# ~/.config/zathura/zathurarc

# Background and foreground colors for interface
set default-bg            "#282828"  # Dark warm brown-black
set default-fg            "#ebdbb2"  # Warm light text

# Recoloring document (text/background)
set recolor               true
set recolor-keephue       true
set recolor-lightcolor    "#282828"  # Background
set recolor-darkcolor     "#ebdbb2"  # Text

# UI components
set statusbar-bg          "#3c3836"  # Slightly lighter than bg
set statusbar-fg          "#ebdbb2"
set inputbar-bg           "#3c3836"
set inputbar-fg           "#ebdbb2"
set completion-bg         "#3c3836"
set completion-fg         "#ebdbb2"

# Optional accent for completion selection
set completion-highlight-bg "#504945"
set completion-highlight-fg "#fabd2f"  # Warm yellow

set selection-clipboard clipboard
